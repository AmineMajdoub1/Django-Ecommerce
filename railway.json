{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python manage.py collectstatic --noinput && gunicorn ecom.wsgi --bind 0.0.0.0:$PORT --workers 3 --timeout 120"
  }
}
